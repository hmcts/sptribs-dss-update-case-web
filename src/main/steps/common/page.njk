{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk/components/footer/macro.njk" import govukFooter %}


{% extends "govuk/template.njk" %}

{% block head %}
  {% include "./webpack/css.njk" %}
  <!-- Dynatrace -->
    <script type="text/javascript" src="{{ globals.dynatrace.dynatraceUrl }}" crossorigin="anonymous"></script>
  <!-- End Dynatrace -->
{% endblock %}

{% block header %}
  {% include "../cookie-banner/template.njk" %}
  {{ govukHeader({
    containerClasses: "govuk-width-container",
    serviceName: serviceName,
    serviceUrl: (globals.basePath if globals.basePath) + "/",
    navigation: [
      {
        href: "/logout" if isLoggedIn else "/",
        text: signOut if isLoggedIn
      }
    ]

  }) }}
{% endblock %}


{% block pageTitle %}
  {% if (sessionErrors and sessionErrors.length > 0) or (fileErrors and fileErrors.length > 0) %}
    {{ errorPrefix }} {{ serviceName }} - {{ title }} - {{ govUk }}
  {% else %}
    {{ serviceName }} - {{ title }} - {{ govUk }}
  {% endif %}
{% endblock %}

{% block beforeContent %}
  <div class="hmcts-banner">

    <svg class="hmcts-banner-icon" fill="currentColor" focusable="false" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 25 25" height="25" width="25">
      <path d="M13.7,18.5h-2.4v-2.4h2.4V18.5z M12.5,13.7c-0.7,0-1.2-0.5-1.2-1.2V7.7c0-0.7,0.5-1.2,1.2-1.2s1.2,0.5,1.2,1.2v4.8
C13.7,13.2,13.2,13.7,12.5,13.7z M12.5,0.5c-6.6,0-12,5.4-12,12s5.4,12,12,12s12-5.4,12-12S19.1,0.5,12.5,0.5z" /></svg>

    <div class="hmcts-banner-message">
      <span class="hmcts-banner-assistive">information</span>
        The Criminal Injuries Compensation (CIC) Tribunal service will be unavailable for all users on 26/11/2025 between 6:00pm and 8:00pm
        
        Ni fydd y gwasanaeth Tribiwnlys Digolledu am Anafiadau Troseddol ar gael i holl ddefnyddwyr ar 26/11/2025 rhwng 6:00pm ac 8:00pm
    </div>

  </div>

  {{ govukPhaseBanner({
    tag: {
      text: phase
    },
    html: feedback |replace("currentUrl",currentUrl)  + languageToggle
  }) }}
  {% block backLink %}
    <a href="#" class="govuk-back-link">{{ back }}</a>
  {% endblock %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% block error_summary %}
        {% include "common/error/summary.njk" %}
      {% endblock %}

      {% block page_content %}
        {% if title %}
          <h1 class="govuk-heading-l govuk-!-margin-bottom-5">{{ title }}</h1>
        {% endif %}

      {% endblock %}

      {% if form %}
        {% block form %}
          {% include "common/form/form.njk" %}
        {% endblock %}
      {% endif %}

      {% block page_content_under_form %}
      {% endblock %}
    </div>

  </div>
  <div class="govuk-grid-row">
       {% block page_contact_us %}

        {% endblock %}
  </div>
{% endblock %}


{% block footer %}
  {{ govukFooter({
    copyright: {
      text: copyright | safe
    },
    contentLicence: {
      text: ogl | safe
    },
    meta: {
      items: [
        {
          href: "/cookies",
          text: cookies
        },
        {
          href: "/privacy-policy",
          text: privacyPolicy
        },
        {
          href: "/accessibility-statement",
          text: accessibility
        },
        {
          href: "/terms-and-conditions",
          text: termsAndConditions
        },
        {
          href: "/contact-us",
          text: contactUs
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  {% include "./webpack/js.njk" %}
{% endblock %}
